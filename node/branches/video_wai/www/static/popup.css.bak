/* CSS Document */
body{
	font-family:Verdana, Arial, Helvetica, sans-serif; 
	font-size:small;
	margin:0px;
	padding:0px;
	background:#D4E2EF url(popup_leftbar_content.gif) top left repeat-y;
	overflow:hidden;
	
	}
/*Font-Size Hack*/
*html body{
	font-size:x-small; /* für IE5/Win */
	f\ont-size:x-small; /*für andere IE-Versionen */
}
	
img {border: none;}
div, p, td, th, img, h1, h2, h3, h4, h5, span, a, li, ul, form, input{margin:0px; padding:0px;}

a{
	color:#555555;
}
a:hover{
	color:#000000;
	text-decoration:underline;
}

.identifier {
	font-weight:bolder;
}
.textfield{
	font-size:1em;
	margin: 3px 0px;
	padding:0px;
	width: 111px;
	background:#FFFFFF;
}
.textfield:focus{
	background: #FFFFFF;
}
.dropdown{
	font-size:1em;
	margin: 3px 0px;
	padding:0px;
	width: 115px;
	background:#D9ECFF;
	}
.dropdown:focus{
	background:#FFFFFF;
}
.checkbox {
	vertical-align:middle;

}
.button{
	font-size:1em;
	margin: 5px 0px;
	padding: 2px 0px;
	background-color:#C4E0E7;
}
